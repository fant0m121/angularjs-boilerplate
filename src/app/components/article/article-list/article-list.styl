.ui-page-news
    padding 30px 0 70px
    position relative
    overflow hidden

    &:before
        content 'Новости'
        position absolute
        bottom -100px
        transform translate(-50%, 0)
        left 50%
        color #f8f8f8
        font-family Arial
        font-weight bold
        font-size 300px
        text-transform uppercase
        z-index -1

.ui-filter
    display flex
    align-items center
    justify-content space-around
    font-family Arial
    font-size 14px
    line-height 24px

    &__text
        color #9d9d9d

    &__list
        color #379a25
        text-transform uppercase
        font-weight bold
