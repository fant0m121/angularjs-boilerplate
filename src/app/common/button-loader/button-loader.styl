.ui-button-loader
    position absolute
    display flex
    justify-content center
    align-items center
    top 0
    left 0
    right 0
    bottom 0
    line-height 0
    z-index 1
    font-size 8px

    &__point
        display inline-block
        transform scale(.4)
        height 1em
        width 1em
        border-radius 1em

        &:nth-child(1)
            animation loader-1 1.4s infinite linear
            animation-delay 0

        &:nth-child(2)
            animation loader-2 0.7s infinite linear
            animation-delay .35s

        &:nth-child(3)
            animation loader-1 1.4s infinite linear
            animation-delay .7s

@keyframes loader-1
    0%
        transform scale(.4)
    25%
        transform scale(1)
    50%
        transform scale(.4)
    100%
        transform scale(.4)

@keyframes loader-2
    0%
        transform scale(.4)
    40%
        transform scale(1)
    80%
        transform scale(.4)
    100%
        transform scale(.4)
