$general-border-radius = 5px
$general-color = #ffffff

.ui-general-button
    display inline-block
    vertical-align middle
    position relative
    cursor pointer
    border-radius $general-border-radius
    background-color transparent
    border 0
    color black
    text-decoration none
    transition background-color .17s ease-in-out, color .17s ease-in-out
    outline 0
    overflow hidden
    &:hover
    &:focus
        text-decoration none

    &--green
        background-color $color-kelly-green
        border 1px solid $color-kelly-green
        color $general-color
        &:focus
            background-color $color-forest-green
            color $general-color
        &:hover
            background-color $color-lime-green
            color $general-color

        .ui-button-loader
            background-color $color-kelly-green
            &__point
                background $general-color

    &--gray
        background-color $color-taupe-gray
        border 1px solid white
        color $general-color
        &:focus
            background-color $color-taupe-gray
        &:hover
            background-color white
            color $color-dark-jungle-green

        .ui-button-loader
            background-color $color-taupe-gray
            &__point
                background $general-color

    &--white
        background-color white
        border 1px solid $color-dark-gray
        color $color-dark-gray
        &:focus
            background-color $color-taupe-gray
        &:hover
            background-color $color-dark-gray
            color white

        .ui-button-loader
            background-color $color-dark-gray
            &__point
                background $general-color

    &--md
        font-size 14px
        line-height 24px
        padding 12px 25px

    &--block
        display block
        width 100%

    &--loading
        color transparent

    .ui-button-loader
        border-radius $general-border-radius
