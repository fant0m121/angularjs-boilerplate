{
    "extends": "eslint:recommended",
    "plugins": ["angular"],
    "env": {
        "es6": true,
        "browser": true,
        "jasmine": true
    },
    "globals": {
        "angular": true,
        "module": true,
        "inject": true
    },
    "parser": "babel-eslint",
    "rules": {
        "comma-dangle": 2,
        "no-cond-assign": [2, "always"],
        "no-console": 0,
        "no-constant-condition": 2,
        "no-control-regex": 2,
        "no-debugger": 2,
        "no-dupe-args": 1,
        "no-dupe-keys": 1,
        "no-empty": 2,
        "no-empty-character-class": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": 2,
        "no-extra-semi": 2,
        "no-invalid-this": 1,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 0,
        "valid-typeof": 2,

        // Best Practices
        "block-scoped-var": 2,
        "complexity": 1,
        "consistent-return": 2,
        "curly": 2,
        "default-case": 2,
        "dot-notation": 2,
        "eqeqeq": 2,
        "indent": [1, 4],
        "lines-around-comment": [2, {"allowBlockStart": true, "beforeBlockComment": true, "beforeLineComment": true}],
        "guard-for-in": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-div-regex": 2,
        "no-else-return": 2,
        "no-labels": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-iterator": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-magic-numbers": [2, { "ignore": [1, -1, 100, 0] }],
        "no-native-reassign": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-process-env": 2,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-unused-expressions": 2,
        "no-void": 0,
        "no-warning-comments": [1, { "terms": ["todo", "fixme", "any other term"], "location": "anywhere" }],
        "no-with": 2,
        "radix": 2,
        "wrap-iife": [2, "inside"],

        "strict": 2,

        // Variables
        "no-catch-shadow": 2,
        "no-delete-var": 2,
        "no-label-var": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-undefined": 2,
        "no-unused-vars": 2,
        "no-underscore-dangle": 1,


        // Stylistic Issues
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "camelcase": [2, {"properties": "never"}],
        "comma-spacing": [2, {"before": false, "after": true}],
        "comma-style": [2, "last"],
        "consistent-this": [1, "self"],

        // not sure
        "eol-last": 0,
        "func-names": 2,
        "func-style": [2, "declaration"],
        "key-spacing": [2, { "beforeColon": false, "afterColon": true}],
        "max-nested-callbacks": [2, 5],
        "new-cap": [2, {"newIsCap": true, "capIsNew": true, "capIsNewExceptions":[
            "Object",
            "Function",
            "Number",
            "String",
            "Boolean",
            "Date",
            "Array",
            "Symbol",
            "RegExp"
        ]}],
        "new-parens": 2,
        "no-array-constructor": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, {"max": 1}],
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "semi-spacing": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "operator-assignment": [2, "always"],
        "padded-blocks": [2, "never"],
        // not sure
        "quote-props": [2, "as-needed"],
        // not sure
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "space-before-function-paren": [2, "never"],
        "space-before-blocks": [2, "always"],
        "array-bracket-spacing": [2, "never"],
        "computed-property-spacing": [2, "never"],
        "space-in-parens": [2, "never"],
        "space-unary-ops": [2, { "words": true, "nonwords": false }],
        "keyword-spacing": 1,

        //ES6 Stuff
        "arrow-parens": 1,
        "arrow-spacing": 1,
        "constructor-super": 1,
        "no-class-assign": 1,
        "no-const-assign": 1,
        "no-dupe-class-members": 1,
        "no-this-before-super": 1,
        "no-var": 1,
        "object-shorthand": 1,
        "prefer-arrow-callback": 1,
        "prefer-const": 1,

        // Legacy
        "max-len": [1, 400, 4],
        "max-params": [2, 10],
        "max-statements": [2, 20],
        "no-bitwise": 2
    }
}
